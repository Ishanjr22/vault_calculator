<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#262529"

    tools:context="com.example.junaid.myapplication.EnterpasswordActivity">

    <Button
        android:id="@+id/button5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/button2"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_toEndOf="@+id/button1"
        android:autoText="false"
        android:background="@drawable/my_button_pg"
        android:text="5"
        android:textColor="@android:color/black"
        android:textSize="30dp" />

    <Button
        android:id="@+id/buttonPlus"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_above="@+id/buttonSubt"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_toEndOf="@+id/button9"
        android:background="@drawable/my_button_pd"
        android:text="+"
        android:textColor="@android:color/black"
        android:textSize="30dp" />

    <Button
        android:id="@+id/button9"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/buttonSubt"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_toEndOf="@+id/button5"
        android:autoText="false"
        android:background="@drawable/my_button_pg"
        android:text="9"
        android:textColor="@android:color/black"
        android:textSize="30dp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignBottom="@+id/buttonSubt"
        android:layout_below="@+id/button8"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_toEndOf="@+id/button5"
        android:autoText="false"
        android:background="@drawable/my_button_pg"
        android:text="6"
        android:textColor="@android:color/black"
        android:textSize="30dp" />

    <Button
        android:id="@+id/buttonNext"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/my_button_pg"
        android:text="->"
        android:textColor="@android:color/black"
        android:textSize="40dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/button0" />

    <Button
        android:id="@+id/buttonMultiply"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/my_button_pd"
        android:text="X"
        android:textColor="@android:color/black"
        android:textSize="30dp"
        android:layout_below="@+id/buttonSubt"
        android:layout_toEndOf="@+id/buttonNext" />

    <Button
        android:id="@+id/buttonDivide"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/my_button_pd"
        android:text="/"
        android:textColor="@android:color/black"
        android:textSize="30dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/buttonNext" />

    <Button
        android:id="@+id/button3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignBottom="@+id/button2"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_toEndOf="@+id/button5"
        android:autoText="false"
        android:background="@drawable/my_button_pg"
        android:text="3"
        android:textColor="@android:color/black"
        android:textSize="30dp" />

    <Button
        android:id="@+id/button0"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_toEndOf="@+id/buttonClear"
        android:background="@drawable/my_button_pg"
        android:text="0"
        android:textColor="@android:color/black"
        android:textSize="30dp" />

    <Button
        android:id="@+id/buttonClear"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/my_button_pg"
        android:text="C"
        android:textColor="@color/colorAccent"
        android:textIsSelectable="false"
        android:textSize="30dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:autoText="false"
        android:background="@drawable/my_button_pg"
        android:text="2"
        android:textColor="@android:color/black"
        android:textSize="30dp"
        android:layout_above="@+id/buttonNext"
        android:layout_toEndOf="@+id/buttonClear" />

    <Button
        android:id="@+id/button1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/buttonClear"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:autoText="false"
        android:background="@drawable/my_button_pg"
        android:text="1"
        android:textColor="@android:color/black"
        android:textSize="30dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/button2"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_toEndOf="@+id/editText"
        android:autoText="false"
        android:background="@drawable/my_button_pg"
        android:text="4"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="30dp" />

    <Button
        android:id="@+id/buttonSubt"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_below="@+id/button8"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_toEndOf="@+id/button9"
        android:background="@drawable/my_button_pd"
        android:text="-"
        android:textColor="@android:color/black"
        android:textSize="30sp" />

    <Button
        android:id="@+id/button7"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignBottom="@+id/button8"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:autoText="false"
        android:background="@drawable/my_button_pg"
        android:text="7"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:onClick="onclick"/>

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_above="@+id/buttonPlus"
        android:layout_alignParentStart="true"
        android:background="@drawable/background"
        android:contextClickable="false"
        android:ems="10"
        android:gravity="bottom|right"
        android:inputType="number"
        android:text="0"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light"
        android:textSize="70sp"
        android:textStyle="normal"
        android:layout_below="@+id/imageButton" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#3d3e41"
        app:srcCompat="@drawable/lock"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/button8"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/button5"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_toEndOf="@+id/button4"
        android:autoText="false"
        android:background="@drawable/my_button_pg"
        android:text="8"
        android:textColor="@android:color/black"
        android:textSize="30dp" />

    <Button
        android:id="@+id/buttonEqual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button5"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="61dp"
        android:layout_marginStart="41dp"
        android:background="@drawable/circle_button"
        android:text="="
        android:textColor="@android:color/background_light"
        android:textSize="40dp" />

</RelativeLayout>
